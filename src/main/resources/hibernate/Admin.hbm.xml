<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.yangtzeu.entity.Admin" table="admin" schema="laboratory">
        <id name="id">
            <column name="id" sql-type="char(9)" length="9"/>
            <generator class="assigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="tel">
            <column name="tel" sql-type="char(11)" length="11" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="identity">
            <column name="identity" sql-type="char(1)" length="1"/>
        </property>
        <property name="status">
            <column name="status" sql-type="char(1)" length="1" not-null="true"/>
        </property>

        <!--department 属性，Admin 和 Department 多对一-->
        <many-to-one name="department" class="cn.edu.yangtzeu.entity.Department" column="departmentId"/>

        <!--roles 属性，Admin 和 Role 多对多-->
        <set name="roles" table="admin_role" lazy="false">
            <key column="adminId"/>
            <many-to-many class="cn.edu.yangtzeu.entity.Role" column="roleId"/>
        </set>
    </class>
</hibernate-mapping>